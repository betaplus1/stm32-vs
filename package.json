{
  "name": "stm32",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.c",
  "watch": {
    "make": {
      "patterns": [
        "Src"
      ],
      "clearBuffer": true,
      "extensions": [
        "c",
        "h"
      ]
    },
    "upload": {
      "patterns": [
        "build"
      ],
      "extensions": "bin",
      "delay": 1000
    },
    "upload-linux": {
      "patterns": [
        "build"
      ],
      "extensions": "bin",
      "delay": 5000
    }
  },
  "scripts": {
    "serial": "serialport-terminal -b 115200 --no-echo",
    "serial-echo": "serialport-terminal -b 115200",
    "make": "make",
    "upload": "flash",
    "upload-linux": "bash flash",
    "watch-make": "npm-watch make",
    "watch-make-linux": "npm-watch make",
    "watch-upload": "npm-watch upload",
    "watch-upload-linux": "npm-watch upload-linux",
    "watch": "concurrently --kill-others \"npm run watch-make\" \"npm run watch-upload\" ",
    "watch-linux": "concurrently --kill-others \"npm run watch-make-linux\" \"npm run watch-upload-linux\" "  
  },
  "author": "ML",
  "license": "ISC",
  "dependencies": {
    "@serialport/terminal": "^9.0.0",
    "concurrently": "^5.2.0",
    "npm-watch": "^0.6.0"
  }
}
